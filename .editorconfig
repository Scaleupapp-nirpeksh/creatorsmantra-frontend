# EditorConfig helps maintain consistent coding styles across different editors
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.{json,yml,yaml}]
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_size = 2
quote_type = single

[*.css]
indent_size = 2
quote_type = double

[Makefile]
indent_style = tab

[*.{cmd,bat}]
end_of_line = crlf